package edu.nvcc.csc200.javafx;

import javax.swing.JOptionPane;
import javafx.application.Application;
import javafx.event.ActionEvent;
import javafx.event.EventHandler;
import javafx.geometry.Pos;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.control.Label;
import javafx.scene.control.PasswordField;
import javafx.scene.control.TextField;
import javafx.scene.layout.GridPane;
import javafx.stage.Stage;

public class CE41 extends Application {

	public static void main(String[] args) {
		// TODO Auto generate method sub
		launch(args);
	}


		// TODO Auto-generated method stub

	


	public void start(Stage primaryStage) {
		
		String correctUserName = "csc200";
		String correctAccounttype = "admin";
		String correctPassword = "password";
		primaryStage.setTitle("Authentication");
		Label userNameLbl = new Label("User Name");
		Label AcounttypeLbl = new Label("Account Type");
		Label passwordLbl = new Label("Password");
		TextField userNameTxtFld = new TextField();
		TextField AccounttypeTxtFld = new TextField();
		PasswordField pwTxtFld = new PasswordField();
		@Overrride
		Button submitBtn = new Button("Submit");
		submitBtn.setOnAction(new EventHandler<ActionEvent>() {
		
			
			boolean redo;
			
			
			String inputUserName = "";
			String inputPw = "";
			String inputAccouttype = "";
			public void handle(ActionEvent arg0) {
				do {
				inputUserName = userNameTxtFld.getText();
				inputPw = pwTxtFld.getText();
				inputAccouttype = AccounttypeTxtFld.getText();
				if (correctUserName.equals(inputUserName) && correctAccounttype.equals(inputAccouttype)
						&& correctPassword.equals((inputPw))) {
					JOptionPane.showMessageDialog(null, "Welcome"
							+" " + inputUserName);
				} else {
					JOptionPane.showMessageDialog(null, "Fail Authentication");
				}
			}
			while (redo = false);
				// TODO Auto-generated method stub

			}

		});

		GridPane grid = new GridPane();
		grid.setAlignment(Pos.CENTER);
		grid.setVgap(10);
		grid.setHgap(10);

		grid.add(userNameLbl, 0, 0);
		grid.add(userNameTxtFld, 1, 0);
		grid.add(passwordLbl, 0, 1);
		grid.add(pwTxtFld, 1, 1);
		grid.add(AcounttypeLbl, 0, 2);
		grid.add(AccounttypeTxtFld, 1, 2);
		
		
		grid.add(submitBtn, 1, 3);

		Scene scene = new Scene(grid, 500, 500);
		primaryStage.setScene(scene);
		primaryStage.show();

	}
}
